@model Logic.DAL.Models.LoginRequest

@{
ViewData["Title"] = "Войти";
}

<h1 class="row justify-content-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-5">
        <section class="p-4 border rounded bg-light shadow-sm">
            <form id="account" method="post" asp-controller="Account" asp-action="Login">
                <h4 class="row justify-content-center mb-3">Используйте учетную запись для входа.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Номер телефона</label>
                    <input asp-for="Phone" class="form-control" maxlength="12" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" maxlength="20" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="btn-reg">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
            </form>
        </section>
        
        <div class="mt-3 text-center">
            <p>Нет аккаунта? <a href="/account/register">Регистрация</a></p>
        </div>
    </div>
</div>
